# EchoLink Configuration
# Copy this file to .env and fill in your actual values
# 
# SECURITY WARNING: Never commit .env files or real API keys to version control
# The .env file is in .gitignore to prevent accidental commits

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=default_voice_id_here

# Text Summarization Provider
# Options: 'ollama' (local), 'openai' (requires API key), 'simple' (rule-based)
SUMMARIZATION_PROVIDER=ollama

# Ollama Configuration (for local LLM summarization)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# OpenAI API Configuration (for text summarization)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Voice Settings
VOICE_SPEED=1.0
VOICE_VOLUME=0.8

# Monitor Settings
CLIPBOARD_MONITOR_ENABLED=true
CLIPBOARD_MONITOR_INTERVAL=1.0

# UI Settings
CLI_THEME=dark
CLI_COLORS_ENABLED=true

# Summarization Settings
SUMMARIZATION_ENABLED=true
MAX_SUMMARY_LENGTH=150
MIN_TEXT_LENGTH=50

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO 